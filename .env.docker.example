# ========================================
# BITÁCORA SOC - Docker Environment
# ========================================

# Puerto público del frontend
FRONTEND_PORT=80

# MongoDB
MONGO_ROOT_USER=admin
MONGO_ROOT_PASSWORD=CHANGE_ME_STRONG_PASSWORD_HERE
MONGO_DATABASE=bitacora_soc

# Backend - Seguridad
JWT_SECRET=CHANGE_ME_RANDOM_STRING_MIN_32_CHARS
ENCRYPTION_KEY=CHANGE_ME_RANDOM_STRING_EXACTLY_32_CHARS

# JWT expiration (ejemplos: 7d, 24h, 30d)
JWT_EXPIRES_IN=7d

# SMTP (Opcional - para notificaciones email)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
SMTP_FROM=

# ========================================
# INSTRUCCIONES
# ========================================
# 1. Copiar este archivo a .env
# 2. Cambiar TODAS las contraseñas y secrets
# 3. Generar JWT_SECRET: openssl rand -base64 32
# 4. Generar ENCRYPTION_KEY: openssl rand -hex 16
# 5. Configurar SMTP si necesitas emails
# 6. Ejecutar: docker-compose up -d
